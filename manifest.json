{
  "name": "Falcon",
  "description": "Add various new functionalities and improvements to Western's OWL site",
  "version": "1.0.2",
  "manifest_version": 2,
  "icons": {
    "16": "./assets/images/falcon-16x16.png",
    "32": "./assets/images/falcon-32x32.png",
    "48": "./assets/images/falcon-48x48.png",
    "128": "./assets/images/falcon-128x128.png"
  },
  "background": {
    "scripts": [
      "./background.js"
    ]
  },
  "options_page": "./options.html",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "tabs",
    "https://owl.uwo.ca/*/*",
    "https://rishab.me/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://owl.uwo.ca/*"],
      "css": [
        "./assets/css/preload.css",
        "./assets/css/helper.css",
        "./assets/css/dx.light.css",
        "./assets/css/dx-diagram.css",
        "./assets/css/animate.min.css"
      ],

      "js": [
        "./assets/js/dist/jquery-2.2.4.min.js",
        "./assets/js/dist/jquery-ui.min.js",
        "./assets/js/dist/bootstrap.min.js",
        "./assets/js/dist/dx-diagram.min.js",
        "./assets/js/dist/dx.all.js",
        "./dist/main.js",
        "./foreground.js"

      ],
      "run_at":    "document_idle"

    }
  ],
  "web_accessible_resources": [
    "/assets/*",
    "/dist/*"
  ]
}
