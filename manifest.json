{
  "name": "Falcon",
  "description": "Add various new functionalities and improvements to Western's OWL site",
  "version": "0.1.0",
  "manifest_version": 2,
  "icons": {
    "16": "./assets/images/falcon-16x16.png",
    "32": "./assets/images/falcon-32x32.png",
    "48": "./assets/images/falcon-48x48.png",
    "128": "./assets/images/falcon-128x128.png"
  },
  "background": {
    "scripts": [
      "./background.js"
    ]
  },
  "options_page": "./options.html",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "tabs",
    "https://owl.uwo.ca/*/*",
    "https://rishab.me/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://owl.uwo.ca/*"],
      "css": [
        "./assets/css/styles.css",
        "./assets/css/owl-components.css",
        "./assets/css/lesson-builder.css",
        "./assets/css/lesson-builder-checklist.css",
        "./assets/css/tablesorter-bs4.min.css",
        "./assets/css/helper.css"
      ],
      "js": [
        "./assets/js/dist/jquery-2.2.4.min.js",
        "./assets/js/dist/jquery-ui.min.js",
        "./assets/js/dist/bootstrap.min.js",
        "./assets/js/dist/assignment.js",
        "./custom.js",
        "./assets/js/dist/morpheus.min.js",
        "./assets/js/dist/gradebook-grade-summary.js",
        "./assets/js/dist/pjax.min.js",
        "./assets/js/dist/rfs.min.js",
        "./assets/js/dist/topbar.min.js",
        "./assets/js/dist/jquery.tablesorter.min.js",
        "./assets/js/dist/jquery.tablesorter.widgets.min.js",
        "./assets/js/redirect_handler.js",
        "./assets/js/favourites.js",
        "./assets/js/pjax.js",
        "./foreground.js"
      ],
      "run_at":    "document_idle"
    }
  ],
  "web_accessible_resources": [
    "/assets/fonts/*.ttf",
    "/assets/js/dist/morpheus.min.js",
    "/assets/js/dist/assignment.js"
  ]
}
